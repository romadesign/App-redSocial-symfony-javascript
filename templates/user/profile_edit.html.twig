{% extends 'base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="row content_css">
        <div class="col-md-3"></div>
        <div class="col-md-6">
             {{ form_start(form, {'enctype': 'multipart/form-data'}) }}
            <div>
                {{ form_label(form.email) }}
                {{ form_errors(form.email) }}
                {{ form_widget(form.email) }}
                {{ form_help(form.email) }}
            </div>
            <img width="150px" src="{{ asset("img/"~user.img) }}" alt="">
            <div>
                {{ form_label(form.img) }}
                {{ form_errors(form.img) }}
                {{ form_widget(form.img) }}
                {{ form_help(form.img) }}
            </div>
             <div>
                {{ form_label(form.name) }}
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
                {{ form_help(form.name) }}
            </div>
            <div>
                {{ form_label(form.subname) }}
                {{ form_errors(form.subname) }}
                {{ form_widget(form.subname) }}
                {{ form_help(form.subname) }}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col-md-3"></div>
    </div>
{% endblock %}

